include ../components/icon
include ../components/logo

include ../data/data
- var topIcons = data.footer.topIcons
- var widgetBody = data.footer.widgetBody
- var widgetBottom = data.footer.widgetBottom
- var widgetBottomIcons = data.footer.widgetBottomIcons

footer
	.footer
		.footer__top
			.container
				.row
					.col-lg-4.p-10-0.d-flex.flex-column.align-items-lg-start.align-items-center
						p Kênh thông tin từ chúng tôi:
						br 
						ul.d-flex
							each val in topIcons 
								li.icon-text
									+icon(val)
					.col-lg-2.d-lg-block.d-none.p-10-0
						p.title Đăng ký nhận emal từ chúng tôi
					.col-lg-5.offset-lg-1.d-flex.justify-content-end.p-10-0
						.search-box
							input(class='search text-grey-300', type='type', placeholder="Email của bạn ...")
							button.btn-search.icon-text.p-0
								+icon('fas fa-paper-plane')(class='text-white-100 p-0')
		.footer__body
			.container
				.row
					.col-lg-4
						+logo
						p.content Green shop được thành lập từ 8/2020 được sự tin tưởng của khách hàng trong suốt thời gian hoạt động đến nay của hàng ngày một phát triển.
						.phone.icon-text
							+icon('fas fa-mobile-alt')(class="text-green-100")
							span Điện thoại: (84-4) 66.558.868			
						.email.icon-text
							+icon('far fa-envelope')(class="text-green-100")
							span Email: info@dkt.com.vn
					.col-lg-8.d-flex.justify-content-start.flex-wrap
						each lists in widgetBody
							ul.list-wrapper.d-flex.flex-column.justify-content-between.w-md-100
								each val, index in lists
									if (index === 0 )
										li.icon-text
											span= val
									else
										li.icon-text
											+icon('fas fa-chevron-right')
											span= val
		.footer__bottom
			.container
				.row.gy-3.py-4
					.col-lg-10
						ul.d-flex.flex-md-row.flex-column.justify-content-lg-start.justify-content-center
							each val in widgetBottom
								li.p-2
									p= val
					.col-lg-2.center
						ul.d-flex.justify-content-lg-end.justify-content-center
							each val in widgetBottomIcons
								li.px-1
									+icon(val)
			.copy-right.center.p-3
				p Thiết kế bởi Bizweb 
					+icon('far fa-copyright')
