extends ../base/base
include ../components/breadcrumb
include ../components/input


block pages
	include ../data/data
	- var breadcrumbItems = data.login.breadcrumbItems
	- var inputLogin = data.login.inputLogin
	- 
		var pages = {
			title: "Đăng Nhập",
			link: "/login.html"
		}
block layouts
	.login
		.container
			+breadcrumb(breadcrumbItems)
			.row.py-5
				.col-md-6
					p Thông tin cá nhân
					each val in inputLogin
						+input(val[0], val[1])
					+input("Đăng nhập", "button", "green")
				.col-md-6.px-4
					p Bạn chưa có tài khoản ?
					span Đăng ký tài khoản ngay để có thẻ mua hàng nhanh chóng và dễ dàng hơn ! Ngoài ra còn có rất nhiều chính sách và ưu đãi cho các thành viên citybike.
					+input("Đăng ký", "button", "green")
